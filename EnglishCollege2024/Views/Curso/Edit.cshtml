@model EnglishCollege2024.Curso

@{
    ViewBag.Title = "Edit";
    //Layout = "~/Views/Concepto/Edit.cshtml";
}

@using (Html.BeginForm("Edit", "Curso"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Datos del Curso</h4>
    <hr />

    <h5>(*) Campos Obligatorios </h5>

    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @*@Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })*@
        @Html.Label("Nombre (*)", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
        <br />
        @*@Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label col-md-2" })*@
        @Html.Label("Precio General (*)", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
        </div>
        <br />
        @*@Html.LabelFor(model => model.PrecioLibro, htmlAttributes: new { @class = "control-label col-md-2" })*@
        @Html.Label("Precio de Libro", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.PrecioLibro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PrecioLibro, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8 text-center" style="margin-top: 3rem">
            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-primary" })
</div>


