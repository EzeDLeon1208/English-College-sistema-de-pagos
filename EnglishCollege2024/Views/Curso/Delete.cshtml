@model EnglishCollege2024.Curso

@{
    ViewBag.Title = "Eliminar Curso";
}

<h3>Estas seguro/a de querer eliminar el siguiente curso?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.Nombre)*@
            @Html.Label("Curso y Precio")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Precio)*@
            @Html.Label("Precio General")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.PrecioLibro)*@
            @Html.Label("Precio del Libro")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PrecioLibro)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-md-10 text-center">
            <input type="submit" value="Eliminar" class="btn btn-success" />
        </div>

        <br />
        <div class="form-actions no-color">
            @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-primary" })
            @*<input type="submit" value="Eliminar" class="btn btn-success" />*@
        </div>

    }
</div>


