@model IEnumerable<EnglishCollege2024.Cobro>

@{
    ViewBag.Title = "Index";
    var idEstudiante = ViewBag.idEstudiante;
}

<h2>Lista de Pagos</h2>

<p>
    @Html.ActionLink("Agregar Pago", "Create", new { idEstudiante = idEstudiante }, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.Estudiante.DNI)
            </th>*@
        <th>
            @Html.Label("Concepto")
        </th>
        <th>
            @Html.Label("Precio")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Activo == true)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Estudiante.DNI)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Concepto.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.precioTotal)
                </td>
                @*<td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Info", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                    </td>*@
            </tr>
        }
    }
</table>
<p>
    @Html.ActionLink("Volver a Lista", "Index", "Estudiante", "", new { @class = "btn btn-primary" })
</p>
